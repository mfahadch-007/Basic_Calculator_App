<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base light theme -->
    <style name="Base.Theme.Basic_Calculator_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Optional: Primary color -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Basic_Calculator_App" parent="Base.Theme.Basic_Calculator_App" />


    <!-- Below Style is for All Number Buttons and Dot and Backspace Button -->
    <style name="FixedButtonStyle">
       <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


   <!-- Below Style is for All Operator Buttons -->
    <style name="operatorButtonStyle">
        <item name="android:backgroundTint">@color/dark_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Below Style is for AC Button -->
    <style name="ACButtonStyle">
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Below Style is for Equal Button -->
    <style name="equalButtonStyle">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
